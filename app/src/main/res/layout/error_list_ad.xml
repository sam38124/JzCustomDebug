<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp">

    <TextView
            android:text="崩潰了"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/textView6" android:gravity="left|center_vertical"
            android:paddingStart="10dp" android:textSize="15sp" android:textColor="@color/colorAccent"
            android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/time" android:layout_below="@id/textView6"
            android:layout_alignParentEnd="true" android:textSize="13sp"
            android:layout_marginEnd="5dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp" android:id="@+id/view" android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"/>
</RelativeLayout>