<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/toolbar" android:background="@android:color/holo_red_dark">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent" app:srcCompat="@mipmap/btn_back_normal"
                android:id="@+id/back" tools:ignore="ContentDescription"/>
        <TextView
                android:text="崩潰紀錄"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_centerInParent="true"
                android:textColor="@android:color/white" android:textSize="20sp" android:textStyle="bold"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@id/toolbar">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="廠牌與型號"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" android:id="@+id/textView8"
                     android:gravity="left|center_vertical"
                    android:textSize="18dp" android:paddingStart="10dp" android:textStyle="bold"/>
            <TextView
                    android:text="@android:string/VideoView_error_text_invalid_progressive_playback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/make" android:textSize="16sp"
                    android:textColor="@color/colorAccent" android:layout_margin="5dp"/>
            <TextView
                    android:text="崩潰時間"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" android:id="@+id/textView9"
                    android:gravity="left|center_vertical"
                    android:textSize="18dp" android:paddingStart="10dp" android:textStyle="bold"/>
            <TextView
                    android:text="@android:string/VideoView_error_text_invalid_progressive_playback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/time" android:textSize="16sp"
                    android:textColor="@color/colorAccent" android:layout_margin="5dp"/>
            <TextView
                    android:text="Log日誌"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" android:id="@+id/textView10"
                    android:gravity="left|center_vertical"
                    android:textSize="18dp" android:paddingStart="10dp" android:textStyle="bold"/>
            <TextView
                    android:text="@android:string/VideoView_error_text_invalid_progressive_playback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/error_text" android:textSize="16sp"
                    android:textColor="@color/colorAccent" android:layout_margin="5dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>